// first way

#include<iostream>
using namespace std;

int main() {
    int number;
    cout << "Enter number: ";
    
    do {
        cin >> number;
    }
    while (number >= 100 || number < 10);

    return 0;
}

// second way

#include<iostream>
using namespace std;

int main() {
    int number;
    cout << "Enter number: ";
    cin >> number;
    
    while (number >= 100 || number < 10) {
        cin >> number;
    }

    return 0;
}
